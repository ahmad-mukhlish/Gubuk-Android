<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jombloterhormat.android.kecualikuis">

    <!-- memberikan ikon baru yang tampil di layar android (line 9) -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/splashlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- tema utama : appTheme untuk seluruh activity kecuali spalsh screen (Light no action Bar) -->
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Soal" />
        <activity
            android:name=".Skor"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".help"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Buka_penjelasan"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Jawaban"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>